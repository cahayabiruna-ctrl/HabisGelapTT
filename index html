    <style>
        /* Mengimpor font dari Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

        /* Reset CSS dasar */
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Inter', sans-serif;
            color: #ffffff;
            overflow: hidden; /* Mencegah scroll */
        }

        /* Styling dasar untuk kedua slide */
        .slide {
            width: 100vw;
            height: 100vh;
            
            /* Menetapkan gambar background yang sama untuk kedua slide */
            background-image: url('1000163835.jpg');
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            
            /* Menggunakan Flexbox untuk memusatkan konten */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            
            position: relative;
            padding: 20px;
            box-sizing: border-box;
        }

        /* Lapisan (overlay) semi-transparan di atas background */
        .slide::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.65);
            z-index: 1;
        }

        /* Konten di dalam slide agar posisinya di atas overlay */
        .slide-content {
            position: relative;
            z-index: 2;
        }

        /* --- Styling untuk Slide 1 (Motivasi) --- */

        #slide1 h1 {
            font-size: 3em;
            margin-bottom: 10px;
